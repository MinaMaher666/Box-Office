<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/poster_margin">

    <ProgressBar
        android:id="@+id/poster_pb"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/poster_height">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/main_rate"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="7.5"
            android:layout_width="@dimen/rate_circle"
            android:layout_height="@dimen/rate_circle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/normal_margin"
            android:background="@drawable/rate_circle" />
    </RelativeLayout>

</FrameLayout>